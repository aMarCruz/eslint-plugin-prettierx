# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,esm}]
quote_type = single
max_line_length = 92

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
